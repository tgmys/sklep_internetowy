@model sklep_internetowy.Models.Zamowienie

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Podgląd Faktury VAT</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .details, .items, .summary {
            margin-bottom: 20px;
        }

            .items table {
                width: 100%;
                border-collapse: collapse;
            }

            .items table, .items th, .items td {
                border: 1px solid black;
            }

            .items th, .items td {
                padding: 8px;
                text-align: left;
            }

        .summary {
            text-align: right;
        }

        .download-btn {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Faktura VAT</h1>
    </div>
    <div class="details">
        <p><strong>Numer zamówienia:</strong> @Model.ZamowienieID</p>
       
        <p><strong>Nazwisko:</strong> @Model.Nazwisko</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Adres:</strong> @Model.Adres</p>
        <p><strong>Miasto:</strong> @Model.Miasto</p>
        <p><strong>Kod pocztowy:</strong> @Model.KodPocztowy</p>
        <p><strong>Telefon:</strong> @Model.Telefon</p>
    </div>
    <div class="items">
        <h2>Pozycje zamówienia:</h2>
        <table>
            <thead>
                <tr>
                    <th>Nazwa kursu</th>
                    <th>Ilość</th>
                    <th>Cena jednostkowa</th>
                    <th>Cena całkowita</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pozycja in Model.PozycjeZamowienia)
                {
                    <tr>
                        <td>Nazwa</td>
                        <td>@pozycja.Ilosc</td>
                        <td>@pozycja.CenaZakupu:C</td>
                        <td>@(pozycja.Ilosc * pozycja.CenaZakupu):C</td>
                    </tr>
}
            </tbody>
        </table>
    </div>
    <div class="summary">
        <p><strong>Wartość zamówienia:</strong> @Model.WartoscZamowienia:C</p>
        <p><strong>VAT (23%):</strong> @(Model.WartoscZamowienia * 0.23m):C</p>
        <p><strong>Do zapłaty:</strong> @(Model.WartoscZamowienia * 1.23m):C</p>
    </div>
</body>
</html>